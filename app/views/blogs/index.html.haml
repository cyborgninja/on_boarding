%p#notice
  = notice
%h1 Listing blogs
%table
  %thead
    %tr
      %th Title
  %tbody
    - @blogs.each do |blog|
      %tr
        %td
          = blog.title
          -# = blog.title.html_safe

        %td
          = link_to 'Show', blog_path(blog)
        %td
          = link_to 'Edit', edit_blog_path(blog)
        %td
          = link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }
        %td
          = link_to 'Create Entry', new_blog_entry_path(blog)
        %td
          = link_to 'エントリーCSV出力', blog_entries_path(blog, format: :csv)
        %td
          author:
          = blog.user.name


%p
  = link_to 'Create Blog', new_blog_path
